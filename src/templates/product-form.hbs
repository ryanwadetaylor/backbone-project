<form action="#" class="product">
  <div>
    Name: <input type="text" name="name" value="{{name}}">
  </div>
  <div>Type:
    {{!-- Type: <input type="text" name="type" value="{{type}}"> --}}
    <select name="type">
    	<option value="{{type}}" selected>{{type}}</option>
    	<option value="Action Figure">Action Figure</option>
    	<option value="Vehicle">Vehicle</option>
    	<option value="Playset">Playset</option>
    	<option value="Lego Action Figure">Lego Action Figure</option>
    	<option value="Lego Vehicle">Lego Vehicle</option>
    	<option value="Lego Playset">Lego Playset</option>
    </select>
  </div>
    <div>
    Price: <input type="text" name="price" value="{{price}}">
  </div>
    <div>
    Quantity: <input type="text" name="qty" value="{{qty}}">
  </div>
    <div>
    
    Image link: <input type="text" name="img" size="80" value="{{img}}">
    
  </div>
  <br>
  {{#if id}}
   <img src="{{img}}" alt="" width=100 height=100>
   {{/if}}
    <br>
    <br>	
  <button>Submit</button>
</form>